@using Syncfusion.Blazor.ImageEditor
@using Microsoft.AspNetCore.Components.Forms
@using My.ClasStars.Models
@using System.IO

@if (Visible)
{
    <div id="custom-modal" class="cst-modal">
        <div class="myModalHead">
            <span>@FName</span>
            <button class="modalKill" @onclick="CloseModelPopup">@StringsResource.ImageEditor_CloseLabel</button>
        </div>
        <div class="cst-modalBody">
            @if (isProcessing)
            {
                <div class="modal-loader-overlay">
                    <div class="loader">@StringsResource.ImageEditor_PerformingAction</div>
                </div>
            }
            @if (IsContact)
            {
                <div class="editorIcons upDown-icon">
                    <div class="iconMain">
                        <span class="label no-select">@StringsResource.ImageEditor_UseCamera</span>
                        <div class="e-avatar e-avatar-circle e-avatar-xlarge @camera">
                            @{
                                string cameraImg = Path.Combine(wwwRootPath, "\\images\\camera.png");
                            }
                            <img src="@cameraImg" @onclick="PerformCamera" title="@StringsResource.ImageEditor_UseCamera" />
                        </div>

                    </div>
                    <div class="iconMain">

                        <span class="label no-select">@StringsResource.ImageEditor_LoadPicture</span>
                        <div class="e-avatar e-avatar-circle e-avatar-xlarge">
                            @{
                                var loadImg = Path.Combine(wwwRootPath, "\\images\\load.png");
                            }
                            <img src="@loadImg" @onclick="PerformLoad" title="@StringsResource.ImageEditor_LoadPicture" />
                        </div>
                    </div>
                    <div class="iconMain">
                        <span class="label no-select">@StringsResource.ImageEditor_Delete</span>
                        <div class="e-avatar e-avatar-circle e-avatar-xlarge">
                            @{
                                string deleteImg = Path.Combine(wwwRootPath, "\\images\\delete.png");
                            }
                            <img src="@deleteImg" @onclick="PerformDelete" title="@StringsResource.ImageEditor_Delete" />
                        </div>
                    </div>
                </div>
            }

            <div id="CameraContent" class="@cameraVisiblility">
                <div id="camera"></div>
                <button class="captureBtn" @onclick="Capture">@StringsResource.ImageEditor_Capture</button>
            </div>

            <div class="modalEditor" id="modalEditor">
                <SfImageEditor id="SfImageEditor"
                               @ref="ImageEditorRef"
                               Toolbar="@customToolbarItem"
                               ShowImageEditorTool="false"
                               Height="300px"
                               Width="400px"
                               TValue="string"
                               ImageLoaded="OnImageLoaded">
                </SfImageEditor>

            </div>


            <div class="editorIcons upDown-icon spaceEven">
                <div class="iconMain">
                    <span class="label no-select">@StringsResource.ImageEditor_Crop</span>
                    <div class="e-avatar e-avatar-circle e-avatar-xlarge @cropClass">
                        @{
                            string cropImg = Path.Combine(wwwRootPath, "\\images\\crop.png");
                        }
                        <img id="imgCrop" src="@cropImg" @onclick="PerformCrop" onmouseover="" title="@StringsResource.ImageEditor_Crop" />
                    </div>
                </div>
                <div class="iconMain">
                    <span class="label no-select">@StringsResource.ImageEditor_Accept</span>
                    <div class="e-avatar e-avatar-circle e-avatar-xlarge @acceptClass">
                        @{
                            string acceptImg = Path.Combine(wwwRootPath, "\\images\\accept.png");
                        }
                        <img id="imgAccept" src="@acceptImg" @onclick="PerformAccept" title="@StringsResource.ImageEditor_Accept" />
                    </div>
                </div>
                <div class="iconMain">
                    <span class="label no-select">@StringsResource.ImageEditor_Rotate</span>
                    <div class="e-avatar e-avatar-circle e-avatar-xlarge @rotateClass">
                        @{
                            string rotateImg = Path.Combine(wwwRootPath, "\\images\\rotate.png");
                        }
                        <img id="imgRotate" src="@rotateImg" @onclick="PerformRotate" title="@StringsResource.ImageEditor_Rotate" />
                    </div>
                </div>
                <div class="iconMain">
                    <span class="label no-select">@StringsResource.ImageEditor_Save</span>
                    <div class="e-avatar e-avatar-circle e-avatar-xlarge @saveClass @(isProcessing ? "processing" : "")">
                        @{
                            string saveImg = Path.Combine(wwwRootPath, "\\images\\save.png");
                        }
                        <img id="imgSave" disabled="@isProcessing" title="@StringsResource.ImageEditor_Save" @onclick="SaveEditedImage" src="@saveImg" />
                            @if (isProcessing)
                            {
                                <div class="btn-spinner" aria-hidden="true"></div>
                            }
                    </div>
                </div>

                <div class="iconMain">
                    <span class="label no-select">@StringsResource.ImageEditor_Undo</span>
                    <div class="e-avatar e-avatar-circle e-avatar-xlarge @undoClass">
                        @{
                            string undoImg = Path.Combine(wwwRootPath, "\\images\\undo.png");
                        }
                        <img id="imgUndo" src="@undoImg" @onclick="PerformUndo" title="@StringsResource.ImageEditor_Undo" />
                    </div>
                </div>

            </div>
            </div>
    </div>
}
